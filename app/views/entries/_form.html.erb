<%= form_for @entry do |f|%>

<%= f.label :quantity %>
<%= f.text_field :quantity %>
<br>
<%= f.label :counter_id, 'Select Counter' %>
<%= f.collection_select :counter_id, current_user.counters, :id, :title, include_blank: true %>
<br>
<%= f.fields_for :counter, Counter.new do |ff| %>
  <%= ff.label :title, 'New Counter' %>
  <%= ff.text_field :title %>
  <%= ff.hidden_field :user_id, :value => "#{current_user.id}" %>
<% end %>
<br>
<%= f.submit %>
<% end %>
