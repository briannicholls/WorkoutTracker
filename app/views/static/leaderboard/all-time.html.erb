
<table class="w3-table w3-bordered">
  <tr>
    <th colspan="2"><h1>Leaderboard</h1></th>
  </tr>
  <tr>
    <%= render 'static/leaderboard/nav'  %>
  </tr>

  <% Counter.all.each do |counter| %>
  <tr>
    <th colspan="2"><h2><%= counter.title %></h2></th>
  </tr>

  <tr>
    <th>Name</th>
    <th>Grand Total</th>
  </tr>
  <% counter.users_by_grand_total.each_with_index do |user, i| %>
    <tr>
      <td><%= link_to "#{i + 1}. #{user.first_name}", user_path(user) %></td>
      <td><%= user.grand_total(counter) %></td>
    </tr>

  <% end %>

  <% end %>
</table>
