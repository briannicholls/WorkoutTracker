<h1><%= @user.name %></h1>

<table class="w3-table w3-bordered">
  <tr>
    <th colspan="2">Counters</th>
  </tr>
  <tr>
    <th><%= link_to 'Add Entry', new_entry_path %></th>
  </tr>

  <% @counters.each do |counter| %>
  <tr>
    <th><%= counter.title %></th>
    <th>Qty</th>
  </tr>

  <% counter.entries.each do |entry|  %>
  <tr>
    <td><%= entry.created_at.localtime.strftime('%D %R') %></td>
    <td><%= entry.quantity %></td>
  </tr>
  <% end %>
  <% end %>
</table>
